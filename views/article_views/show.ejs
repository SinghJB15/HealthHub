<%- include("../partials/head.ejs") %>
<body>
    <%- include("../partials/header.ejs") %>
    <h1 class="article-topic">
        <%= article.topic %>
    </h1>

    <div class="article-container">
        <div class="article-navigation">
            <a href="/article/<%= encodeURIComponent(article.topic) %>" class="btn">Back</a>
            <% if(currentUser) { %>
            <a href="/article/edit/<%= article.id %>" class="btn edit-btn">EDIT</a>
            <form action="/article/<%= article.id %>?_method=DELETE" method="POST" class="delete-form">
                <input type="submit" value="DELETE" class="btn delete-btn">
            </form>
        <% } %>
        </div>

        <h2 class="article-title">
            <%= article.title %>
        </h2>

        <div class="content-image">
            <img src="<%= article.contentImage %>" alt=content-image">
        </div>

        <div class="article-content">
            <%= article.content %>
        </div>

        <div class="article-meta">
            <span>Created By: <%= article.authorName %></span>
            <span>Uploaded: <%= new Date(article.createdAt).toLocaleDateString() %></span>
        </div>
    </div>

    <%- include("../partials/footer.ejs") %>
</body>
