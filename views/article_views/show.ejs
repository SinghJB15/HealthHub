<%- include("../partials/head.ejs") %>
<body>
    <%- include("../partials/header.ejs") %>
    <a href="/article/<%= encodeURIComponent(article.topic) %>" class="btn">Go to Health</a>
    <% if(currentUser) { %>
    <a href="/article/edit/<%= article.id %>">EDIT</a>
    <form action="/article/<%= article.id %>?_method=DELETE" method="POST">
        <input type="submit" value="DELETE">
    </form>
    <% } %>
    <h1>
        <%= article.topic %>
    </h1>

    <h2>
        <%= article.title %>
    </h2>

    <p>
        <%= article.content %>
    </p>

    <p>
        Created By: <%= article.authorName  %>
    </p>

    <p>
        Uploaded: <%= article.createdAt %>
    </p>
</body>
